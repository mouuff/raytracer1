#include "rt.h"

int	is_visible(const t_ray *screen, const t_hit *hit)
{
  if (hit->hit == 0)
    return (0);
  if (hit->norm > vec_norm(&(screen->beta), &(hit->hitpos)))
    return (1);
  return (0);
}
